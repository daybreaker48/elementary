<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_top_todo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_theme"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <!--<ImageView-->
            <!--android:id="@+id/iv_kid_select"-->
            <!--android:layout_width="@dimen/length_26"-->
            <!--android:layout_height="@dimen/length_26"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="start|center_vertical"-->
            <!--android:layout_marginRight="@dimen/length_5"-->
            <!--android:padding="8dp"-->
            <!--android:background="@drawable/kid_selelct"/>-->
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_17"
            android:text="[] 오늘의 학습"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="@dimen/font_20"
        android:text="@string/content_no_todo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_past_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_past_3_day"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_16" />
            <TextView
                android:id="@+id/tv_past_3_week"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_past_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_past_2_day"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_16" />
            <TextView
                android:id="@+id/tv_past_2_week"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_past_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_past_1_day"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_16" />
            <TextView
                android:id="@+id/tv_past_1_week"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_today"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_today_day"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_20" />
            <TextView
                android:id="@+id/tv_today_week"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme_text"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_next_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_next_1_day"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_16" />
            <TextView
                android:id="@+id/tv_next_1_week"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_next_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_next_2_day"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_16" />
            <TextView
                android:id="@+id/tv_next_2_week"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_next_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_next_3_day"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_16" />
            <TextView
                android:id="@+id/tv_next_3_week"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/gray"
                android:text="@string/content_mon"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_receiving"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/length_55"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>