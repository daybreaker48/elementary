<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_top_todo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/main_theme"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <!--<ImageView-->
            <!--android:id="@+id/iv_kid_select"-->
            <!--android:layout_width="@dimen/length_26"-->
            <!--android:layout_height="@dimen/length_26"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="start|center_vertical"-->
            <!--android:layout_marginRight="@dimen/length_5"-->
            <!--android:padding="8dp"-->
            <!--android:background="@drawable/kid_selelct"/>-->
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/ngb_font"
            android:includeFontPadding="false"
            android:gravity="start|center_vertical"
            android:text="[] 오늘의 학습"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bottom_border"
        android:orientation="horizontal">
        <View android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:background="@drawable/card_background"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_area_month_past"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:paddingTop="2dp"
                android:background="@drawable/past_month"
                android:text=""
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_area_month_move"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:text="12"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_area_month_next"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:background="@drawable/next_month"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_area_today"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:background="@drawable/btn_today"
            android:textColor="@color/white"
            android:text="Today"
            android:textSize="14sp" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:background="@drawable/bottom_border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_area_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/gray_alpha"
                android:visibility="gone"
                android:text="12"
                android:textSize="54sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_area_days"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:background="@drawable/bottom_border"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_past_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_past_3_day"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/tv_past_3_week"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_past_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_past_2_day"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/tv_past_2_week"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_past_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_past_1_day"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/tv_past_1_week"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_today"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_today_day"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/main_theme"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_20" />
                <TextView
                    android:id="@+id/tv_today_week"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/main_theme"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_next_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_next_1_day"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/tv_next_1_week"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_next_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_next_2_day"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/tv_next_2_week"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_next_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_next_3_day"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/tv_next_3_week"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

            <LinearLayout
                android:id="@+id/tv_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/length_55"
                android:background="@color/light_gray"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/no_data_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="@dimen/length_100"
                    android:textSize="@dimen/font_16"
                    android:text="@string/content_no_todo"/>
            </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_receiving"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/length_55"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>