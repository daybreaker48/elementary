<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_top_todo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/white_t75"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_kid_select"
            android:layout_width="@dimen/length_26"
            android:layout_height="@dimen/length_26"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:layout_marginRight="@dimen/length_5"
            android:padding="8dp"
            android:background="@drawable/kid_selelct"/>
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            android:text="다인이 학습"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="@dimen/font_20"
        android:text="@string/content_no_todo"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_receiving"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/length_55"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>