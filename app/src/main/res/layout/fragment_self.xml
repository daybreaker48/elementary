<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_top_self"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/main_theme"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <!--<ImageView-->
            <!--android:id="@+id/iv_kid_select"-->
            <!--android:layout_width="@dimen/length_26"-->
            <!--android:layout_height="@dimen/length_26"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="start|center_vertical"-->
            <!--android:layout_marginRight="@dimen/length_5"-->
            <!--android:padding="8dp"-->
            <!--android:background="@drawable/kid_select"/>-->
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/ngb_font"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            android:text="@string/title_selfdo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bottom_border_gray"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:gravity="bottom|center_horizontal"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme"
                android:textSize="@dimen/font_16"
                android:text="@string/content_self_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:gravity="top|center_horizontal"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme"
                android:textSize="@dimen/font_15"
                android:text="@string/content_self_title2"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_self_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/content_self_check"
            android:textColor="@color/main_theme"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_receiving"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/length_55"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/length_55"
        android:background="@color/light_gray"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/no_data_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textColor="@color/gray"
            android:layout_marginBottom="@dimen/length_100"
            android:textSize="@dimen/font_16"
            android:text="@string/content_no_self"/>
    </LinearLayout>

</LinearLayout>