    <LinearLayout
        android:id="@+id/ll_top_receiving"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_t75"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_move_stat_left"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:textSize="@dimen/font_18"
            android:text="@string/button_1"/>
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            android:text="@string/title_selfdo"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_menu_right"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="@dimen/font_18"
            android:text="@string/button_2"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_below="@id/ll_top_receiving">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recv_receiving"
