<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- title -->
    <LinearLayout
        android:id="@+id/ll_top_self"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/main_theme"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/ngb_font"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            android:text="@string/title_selfdo"/>
    </LinearLayout>

    <!-- top description section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_help_todo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="4.5"
            android:adjustViewBounds="true"
            android:gravity="bottom"
            android:src="@drawable/habit" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:gravity="left"
                android:fontFamily="@font/main_font_bold"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme"
                android:textSize="@dimen/font_18"
                android:text="@string/content_self_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="left"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/font_12"
                android:text="@string/content_self_title2"/>
        </LinearLayout>

        <!-- percent -->
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_self_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/content_self_check"
            android:textColor="@color/main_theme"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/percent_back"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="left"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/font_13"
                android:text="9개중"/>
            <TextView
                android:id="@+id/tv_fcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="top"
                android:gravity="left"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/percent"
                android:textSize="@dimen/font_13"
                android:text="5개 완료"/>
        </LinearLayout>
        <com.skydoves.progressview.ProgressView
            android:id="@+id/progressView"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="4dp"
            app:progressView_colorBackground="@color/mid_gray"
            app:progressView_colorProgress="@color/percent"
            app:progressView_progress="0"
            app:progressView_min="0"
            app:progressView_max="100"
            app:progressView_progressFromPrevious="true"
            app:progressView_autoAnimate="true"
            app:progressView_radius="7dp"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText="0%"
            app:progressView_labelTypeface="bold"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_receiving"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/length_55"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/length_55"
        android:background="@color/light_gray"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/no_data_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textColor="@color/gray"
            android:layout_marginBottom="@dimen/length_100"
            android:textSize="@dimen/font_16"
            android:text="@string/content_no_self"/>
    </LinearLayout>

</LinearLayout>