        <LinearLayout
            android:id="@+id/ll_schedule_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_gray"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme"
                android:background="@color/white"
                android:textSize="@dimen/font_16"
                android:text="@string/subtitle_schedule_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:text="색상을 선택하세요."/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:background="@color/white"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tv_schedule_color"
                    android:layout_width="54dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@color/base_schedule"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
        </LinearLayout>
