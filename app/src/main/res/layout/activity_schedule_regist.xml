<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".activity.RegistTodoActivity">

    <include
        android:id="@+id/include"
        layout="@layout/sub_common_back_title"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <LinearLayout
        android:id="@+id/ll_top_regist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/screen_padding"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_gray"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_todo_subject"
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@color/white"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:text="제 목"
                android:textColor="@color/main_theme"
                android:textSize="@dimen/font_16" />

            <EditText
                android:id="@+id/et_schedule_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/main_font"
                android:hint="제목을 입력하세요"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:maxLength="254"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textColor="@color/black_overlay"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_16" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme"
                android:background="@color/white"
                android:textSize="@dimen/font_16"
                android:text="@string/subtitle_days"/>
            <TextView
                android:id="@+id/tv_selectday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:text="@string/content_dailyprogress"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/subject_section_background"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sun"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_transparent"
                    android:text="@string/content_sun"
                    android:padding="2dp"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_mon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_transparent"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:padding="2dp"
                    android:text="@string/content_mon"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_tues"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_transparent"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:text="@string/content_tues"
                    android:padding="2dp"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_wed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_transparent"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:text="@string/content_wed"
                    android:padding="2dp"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_thur"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_transparent"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:text="@string/content_thur"
                    android:padding="2dp"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_fri"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_transparent"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:text="@string/content_fri"
                    android:padding="2dp"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_transparent"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:text="@string/content_sat"
                    android:padding="2dp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
        </LinearLayout>


