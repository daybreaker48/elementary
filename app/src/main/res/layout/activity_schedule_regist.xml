        <LinearLayout
            android:id="@+id/ll_schedule_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_gray"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme"
                android:background="@color/white"
                android:textSize="@dimen/font_16"
                android:text="@string/subtitle_schedule_time"/>
            <TextView
                android:id="@+id/tv_schedule_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:text="시간을 선택하세요."/>
        </LinearLayout>



