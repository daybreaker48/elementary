        <LinearLayout
            android:id="@+id/ll_schedule_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_schedule_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="@dimen/font_20"
                android:text="@string/subtitle_schedule_alarm_none"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/length_10"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="@dimen/font_15"
                android:text="@string/content_schedule_duplicate"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="bottom"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_todo_cancel"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="12"
                android:background="@drawable/btn_back_border"
                android:text="@string/button_cancel_post"
                android:layout_gravity="start"
                android:padding="2dp"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/main_theme"
                android:textSize="@dimen/font_16" />
            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_todo_save"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="12"
                android:background="@drawable/btn_back_fill"
                android:text="@string/button_save_post"
                android:layout_gravity="end"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:padding="2dp"
                android:textSize="@dimen/font_16" />
        </LinearLayout>
