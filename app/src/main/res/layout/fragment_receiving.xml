<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_top_receiving"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_move_stat_left"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:textSize="@dimen/font_17"
            android:text="@string/button_move_stat_left"/>
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:text="POST"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_save_post"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="@dimen/font_17"
            android:text="@string/button_save_post"/>
    </LinearLayout>

    <TextView
        android:id="@+id/vst_top_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:text="RECEIVING"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vst_top_title"
        android:background="@drawable/card_background"/>

</RelativeLayout>