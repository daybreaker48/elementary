<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_top_schedule"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/main_theme"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:orientation="horizontal">
<!--        <ImageView-->
<!--            android:id="@+id/iv_kid_select"-->
<!--            android:layout_width="@dimen/length_26"-->
<!--            android:layout_height="@dimen/length_26"-->
<!--            android:layout_gravity="center"-->
<!--            android:gravity="start|center_vertical"-->
<!--            android:layout_marginRight="@dimen/length_5"-->
<!--            android:padding="8dp"-->
<!--            android:background="@drawable/kid_select"/>-->
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/ngb_font"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_17"
            android:text="@string/title_schedule"/>
    </LinearLayout>

    <!-- 요일 -->
    <LinearLayout
        android:id="@+id/ll_schedule_day"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/schedule_day"
            android:text="@string/content_time"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/schedule_day"
            android:text="@string/content_mon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/schedule_day"
            android:text="@string/content_tues"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/schedule_day"
            android:text="@string/content_wed"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/schedule_day"
            android:text="@string/content_thur"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/schedule_day"
            android:text="@string/content_fri"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/schedule_day"
            android:text="@string/content_sat"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/schedule_day"
            android:text="@string/content_sun"/>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/main_theme"/>

    <!-- 시간표 내용 -->
    <LinearLayout
        android:id="@+id/ll_area_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/length_55"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_schedule_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:orientation="vertical">
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/ll_schedule_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_schedule_mon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_schedule_tue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_schedule_wed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_schedule_thu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_schedule_fri"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_schedule_sat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_schedule_sun"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/main_font"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="@dimen/font_20"
        android:text="@string/content_no_schedule"/>

</LinearLayout>