<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.KidsListActivity">

    <LinearLayout
        android:id="@+id/ll_top_kidslist"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/main_theme"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_move_stat_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/back"/>
        <!--<ImageView-->
            <!--android:id="@+id/iv_kid_select"-->
            <!--android:layout_width="@dimen/length_26"-->
            <!--android:layout_height="@dimen/length_26"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="start|center_vertical"-->
            <!--android:layout_marginRight="@dimen/length_5"-->
            <!--android:padding="8dp"-->
            <!--android:background="@drawable/kid_select"/>-->
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/ngb_font"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            android:text="@string/title_kidslist"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:layout_marginRight="@dimen/length_15"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/vst_right_2_image"
                android:layout_width="@dimen/length_27"
                android:layout_height="@dimen/length_27"
                android:layout_gravity="center"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:background="@drawable/kid_select"/>
            <ImageView
                android:id="@+id/vst_right_image"
                android:layout_width="@dimen/length_26"
                android:layout_height="@dimen/length_26"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/regist"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_kidslist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/length_55"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>