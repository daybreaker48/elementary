<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".activity.RegistAllActivity">

    <LinearLayout
        android:id="@+id/ll_top_regist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/screen_title_margintop"
        android:padding="@dimen/screen_padding"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="@dimen/font_20"
                android:text="@string/subtitle_subject"/>
            <Spinner
                android:id="@+id/spi_todo_subject"
                android:textSize="@dimen/font_20"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="@dimen/font_20"
                android:text="@string/subtitle_subject_detail"/>
            <Spinner
                android:id="@+id/spi_todo_subject_detail"
                android:textSize="@dimen/font_20"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="@dimen/font_20"
                android:text="@string/subtitle_textbook"/>
            <Spinner
                android:id="@+id/spi_todo_textbook"
                android:textSize="@dimen/font_20"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="@dimen/font_20"
                android:text="@string/subtitle_textbook_subject"/>
            <EditText
                android:id="@+id/et_textbook_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/font_20"
                android:textColor="@color/black_overlay"
                android:hint="교재 제목을 입력하세요"
                android:inputType="textPersonName"
                android:background="@null"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_selectday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18"
                android:text="@string/content_dailyprogress"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sun"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle"
                    android:text="@string/content_sun"
                    android:padding="2dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_mon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle"
                    android:text="@string/content_mon"
                    android:padding="2dp"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_tues"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle"
                    android:text="@string/content_tues"
                    android:padding="2dp"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_wed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle"
                    android:text="@string/content_wed"
                    android:padding="2dp"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_thur"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle"
                    android:text="@string/content_thur"
                    android:padding="2dp"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_fri"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle"
                    android:text="@string/content_fri"
                    android:padding="2dp"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle"
                    android:text="@string/content_sat"
                    android:padding="2dp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/subtitle_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="@dimen/font_20"
                android:text="@string/subtitle_dailyprogress"/>
            <EditText
                android:id="@+id/et_daily_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/font_20"
                android:textColor="@color/black_overlay"
                android:hint="얼마만큼?"
                android:inputType="textPersonName"
                android:background="@null"
                android:textColorHint="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>