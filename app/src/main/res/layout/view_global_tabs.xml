<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_gravity="bottom"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/vst_center_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center|top"
        android:padding="8dp"
        android:background="@drawable/small_circle"/>
        <!--android:src="@drawable/write_24dp"-->
    <ImageView
        android:id="@+id/vst_left_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left|top"
        android:padding="8dp"
        android:background="@drawable/small_circle"/>
    <ImageView
        android:id="@+id/vst_right_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|top"
        android:padding="8dp"
        android:background="@drawable/small_circle"/>

    <LinearLayout
        android:id="@+id/ll_global_tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/zxing_transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vst_main_first_image"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:src="@drawable/todo"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/vst_main_second_image"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:src="@drawable/schedule"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/vst_main_third_image"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:src="@drawable/self"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/vst_main_fourth_image"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:src="@drawable/summary"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/vst_main_fifth_image"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:src="@drawable/setting"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <View
        android:id="@+id/vst_indicator"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/indicator_background"/>

</FrameLayout>