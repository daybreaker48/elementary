<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ACC1"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_top_receiving"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_move_stat_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/back"/>
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/ngb_font"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            android:text="@string/title_todo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:layout_marginRight="@dimen/length_15"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/vst_right_2_image"
                android:layout_width="@dimen/length_27"
                android:layout_height="@dimen/length_27"
                android:layout_gravity="center"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:background="@drawable/kid_select"/>
            <ImageView
                android:id="@+id/vst_right_image"
                android:layout_width="@dimen/length_26"
                android:layout_height="@dimen/length_26"
                android:layout_gravity="center"
                android:padding="8dp"
                android:visibility="gone"
                android:background="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>