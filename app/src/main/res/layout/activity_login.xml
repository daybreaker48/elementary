<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhd.elemantary.activity.LoginActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/common_back_title"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="5"
        android:paddingTop="60dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_login_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_border"
                android:fontFamily="@font/main_font"
                android:hint="아이디(이메일)"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text=""
                android:textColor="@color/main_theme"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_15" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textSize="@dimen/font_15"
                android:textColor="@color/main_theme"
                android:hint="패스워드"
                android:text=""
                android:inputType="numberPassword"
                android:background="@drawable/edit_border"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login_keep"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_check_ok"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/tv_autologin"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:textColor="@color/black"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textSize="@dimen/font_14"
                android:layout_marginLeft="10dp"
                android:text="@string/text_auto_login"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_id_keep"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:padding="5dp"
                android:background="@drawable/circle_check_not"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/tv_save_id"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textSize="@dimen/font_14"
                android:layout_marginLeft="10dp"
                android:text="@string/text_save_id"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:layout_weight="5"
        android:paddingTop="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_google"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="13sp"
            android:background="@drawable/btn_google"
            android:layout_margin="5dp"
            android:fontFamily="@font/main_font"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:text="@string/text_google_login"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kakao"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="20sp"
            android:background="@drawable/kakao_btn_w"
            android:layout_margin="5dp"
            android:fontFamily="@font/main_font"
            android:includeFontPadding="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_login"
            android:layout_margin="5dp"
            android:fontFamily="@font/main_font"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:text="@string/text_tutorial_login_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_join"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="start"
                android:textColor="@color/black"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:textSize="@dimen/font_14"
                android:text="@string/text_tutorial_join"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="end"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_findid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/font_14"
                    android:layout_marginRight="10dp"
                    android:text="아이디"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/font_14"
                    android:layout_marginRight="10dp"
                    android:text="|"/>
                <TextView
                    android:id="@+id/tv_find_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/font_14"
                    android:text="비밀번호 찾기"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
