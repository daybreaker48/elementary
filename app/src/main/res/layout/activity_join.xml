<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhd.elemantary.activity.LoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_weight="7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tutorial_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            fontPath="fonts/DidactGothic-Regular.ttf"
            android:textSize="@dimen/font_36"
            android:textColor="@color/black"
            android:text="@string/text_tutorial_join_title"
            tools:text="@string/text_tutorial_join_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_join_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/font_20"
                android:textColor="@color/black_overlay"
                android:hint="이름 입력"
                android:inputType="textPersonName"
                android:background="@null"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_join_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/font_20"
                android:textColor="@color/black_overlay"
                android:hint="이메일 입력"
                android:inputType="textPersonName"
                android:background="@null"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/line_padding"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_join_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/font_20"
                android:textColor="@color/black_overlay"
                android:hint="비밀번호 입력"
                android:inputType="textPersonName"
                android:background="@null"
                android:textColorHint="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_terms_anchor" />
                <TextView
                    android:id="@+id/tv_terms_all_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    fontPath="fonts/DidactGothic-Regular.ttf"
                    android:textColor="@color/black"
                    android:text="@string/common_all_view"
                    tools:text="@string/common_all_view"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_privacy_anchor" />
                <TextView
                    android:id="@+id/tv_privacy_all_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    fontPath="fonts/DidactGothic-Regular.ttf"
                    android:textColor="@color/black"
                    android:text="@string/common_all_view"
                    tools:text="@string/common_all_view"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkGps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_gps_anchor" />
                <TextView
                    android:id="@+id/tv_gps_all_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    fontPath="fonts/DidactGothic-Regular.ttf"
                    android:textColor="@color/black"
                    android:text="@string/common_all_view"
                    tools:text="@string/common_all_view"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_weight="3">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:text="@string/text_join_email"/>
    </LinearLayout>

</LinearLayout>
