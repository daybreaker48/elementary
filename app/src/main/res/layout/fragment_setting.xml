<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_top_setting"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/main_theme"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/vst_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/ngb_font"
            android:includeFontPadding="false"
            android:gravity="start|center_vertical"
            android:text="설 정"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:layout_marginBottom="@dimen/length_55"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18"
                    android:text="사용자 정보"/>
                <TextView
                    android:id="@+id/tv_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/font_14"
                    android:text="총 0 명"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_kids_regist_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18"
                    android:text="자녀 정보 (추가하기)"/>
                <TextView
                    android:id="@+id/tv_kids_regist_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/font_14"
                    android:text="총 0 명"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_kids_extension"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/extension"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_kids_cell_list_1"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="start"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ll_kids_cell_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back_fill"
                android:layout_gravity="start"
                android:text="한다인"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14" />
            <TextView
                android:id="@+id/ll_kids_cell_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back_fill"
                android:layout_gravity="start"
                android:text="한다인"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14" />
            <TextView
                android:id="@+id/ll_kids_cell_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back_fill"
                android:layout_gravity="start"
                android:text="한다인"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_kids_cell_list_2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="start"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ll_kids_cell_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back_fill"
                android:layout_gravity="start"
                android:text="한다인"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14" />
            <TextView
                android:id="@+id/ll_kids_cell_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back_fill"
                android:layout_gravity="start"
                android:text="한다인"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14" />
            <TextView
                android:id="@+id/ll_kids_cell_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back_fill"
                android:layout_gravity="start"
                android:text="한다인"
                android:fontFamily="@font/main_font"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18"
                    android:text="의견 보내기"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="top"
                    android:autoLink="email"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/font_14"
                    android:text="luluralaDJ@gmail.com"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_logout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18"
                    android:text="로그아웃"/>
                <TextView
                    android:id="@+id/tv_logout_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/font_14"
                    android:text="로그인 화면으로 이동합니다."/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18"
                    android:text="버전 정보"/>
                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="top"
                    android:fontFamily="@font/main_font"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/font_14"
                    android:text="로그인 화면으로 이동합니다."/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>