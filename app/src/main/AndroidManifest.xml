<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mhd.elemantary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.mhd.elemantary.common.MHDApplication"
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:screenOrientation="portrait">

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <!-- [START fcm_default_icon] -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <!-- [END fcm_default_icon] -->
        <!-- [START fcm_default_channel] -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
        <!-- [END fcm_default_channel] -->

        <provider
            android:authorities="com.mhd.elemantary"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <activity
            android:name="com.mhd.elemantary.MainActivity"
            android:theme="@style/FullScreenTheme">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.TutorialActivity"
            android:theme="@style/FullScreenTheme">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.RegistTodoActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.RegistScheduleActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.RegistSelfActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.OptionDailyProgressActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.OptionDailyTextbookActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.OptionAlarmActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>
        <activity
            android:name="com.mhd.elemantary.activity.JoinActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar">
        </activity>

        <activity
            android:name="com.mhd.elemantary.activity.StartActivity"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mhd.elemantary.webview.activity.HybridWebActivity"
            android:theme="@style/FullScreenTheme">
        </activity>
        <activity
            android:name="com.mhd.elemantary.webview.activity.HybridWebGuestActivity"
            android:theme="@style/FullScreenTheme">
        </activity>

        <service android:name="com.mhd.elemantary.service.FCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name="com.mhd.elemantary.service.FCMInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANT_ID_EVENT"/>
            </intent-filter>
        </service>
        <service android:name="com.mhd.elemantary.service.FCMJobService">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

    </application>

    </manifest>